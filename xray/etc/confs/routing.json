{
  "routing": {
    "domainStrategy": "IPOnDemand",
    "__comment__": "IPOnDemand so that geoip:cn works",
    "domainMatcher": "mph",
    "rules": [
      {
        "type": "field",
        "port": 53,
        "inboundTag": [
          "proxy-in"
        ],
        "outboundTag": "dns-out"
      },
      {
        "type": "field",
        "outboundTag": "direct",
        "protocol": [
          "bittorrent"
        ]
      },
      {
        "domains": [
          "geosite:category-ads-all"
        ],
        "outboundTag": "block",
        "type": "field"
      },
      {
        "domains": [
          "regexp:.*mtalk.google.com"
        ],
        "outboundTag": "direct",
        "type": "field"
      },
      {
        "__comment__": "explicit proxy sites. weixin/wechat is for to have fcm, check https://github.com/Tornaco/Thanox/issues/403",
        "domains": [
          "regexp:.*short.weixin.qq.com$",
          "regexp:.*short.wechat.com$"
        ],
        "outboundTag": "proxy",
        "type": "field"
      },
      {
        "__comment__": "Not including geosite:cn because we catch cn sites with geoip:cn. And to proxy explicit cn sites.",
        "domains": [
          "geosite:private",
          "geosite:apple-cn",
          "geosite:google-cn"
        ],
        "outboundTag": "direct",
        "type": "field"
      },
      {
        "ip": [
          "geoip:private",
          "geoip:cn"
        ],
        "outboundTag": "direct",
        "type": "field"
      },
      {
        "network": "tcp,udp",
        "outboundTag": "proxy",
        "type": "field"
      }
    ]
  }
}
